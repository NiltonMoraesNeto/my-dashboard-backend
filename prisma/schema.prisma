// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  nome         String
  email        String   @unique
  password     String
  perfilId     Int
  cep          String?
  avatar       String?
  resetCode    String?
  condominioId String? // ID do condomínio que criou este morador (null para usuários normais)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  perfil     Profile @relation(fields: [perfilId], references: [id])
  condominio User?   @relation("CondominioMoradores", fields: [condominioId], references: [id])
  moradores  User[]  @relation("CondominioMoradores")

  unidades            Unidade[]
  unidadesComoMorador Unidade[]      @relation("UnidadeMorador")
  contasPagar         ContaPagar[]
  boletos             Boleto[]
  reunioes            Reuniao[]
  avisos              Aviso[]
  avisosLidos         AvisoLeitura[]

  @@map("usuarios")
}

model Profile {
  id        Int    @id @default(autoincrement())
  descricao String

  users User[]

  @@map("perfil")
}

model SalesData {
  id    String @id @default(cuid())
  name  String
  value Int
  year  Int

  @@map("salesData")
}

model SalesDataByBuilding {
  id           String @id @default(cuid())
  name         String
  value        Int
  buildingName String

  @@map("salesDataByBuilding")
}

model Unidade {
  id           String   @id @default(cuid())
  numero       String
  bloco        String?
  apartamento  String?
  tipo         String? // "Apartamento", "Cobertura", "Loja", etc.
  status       String   @default("Ativo") // "Ativo", "Inativo", "Alugado"
  proprietario String?
  telefone     String?
  email        String?
  userId       String // Usuário do condomínio (dono/gestor)
  moradorId    String? // Usuário morador vinculado ao apto
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id])
  morador     User?        @relation("UnidadeMorador", fields: [moradorId], references: [id])
  boletos     Boleto[]
  contasPagar ContaPagar[]

  @@map("unidades")
}

model ContaPagar {
  id          String   @id @default(cuid())
  descricao   String
  valor       Float
  vencimento  DateTime
  mes         Int // 1-12
  ano         Int
  categoria   String? // "Manutenção", "Limpeza", "Segurança", etc.
  status      String   @default("Pendente") // "Pendente", "Paga", "Vencida"
  unidadeId   String?
  userId      String // Usuário do condomínio
  observacoes String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id])
  unidade Unidade? @relation(fields: [unidadeId], references: [id])

  @@map("contasPagar")
}

model Boleto {
  id            String    @id @default(cuid())
  unidadeId     String
  mes           Int // 1-12
  ano           Int
  valor         Float
  vencimento    DateTime
  codigoBarras  String?
  nossoNumero   String?
  status        String    @default("Pendente") // "Pendente", "Pago", "Vencido", "Cancelado"
  dataPagamento DateTime?
  userId        String // Usuário do condomínio
  observacoes   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  unidade Unidade @relation(fields: [unidadeId], references: [id])

  @@map("boletos")
}

model Reuniao {
  id        String   @id @default(cuid())
  titulo    String
  data      DateTime
  hora      String
  local     String?
  tipo      String   @default("Assembleia") // "Assembleia", "Reunião Condominial", etc.
  pauta     String?
  status    String   @default("Agendada") // "Agendada", "Realizada", "Cancelada"
  userId    String // Usuário do condomínio
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("reunioes")
}

model Aviso {
  id         String    @id @default(cuid())
  titulo     String
  descricao  String
  tipo       String    @default("Informativo") // "Informativo", "Urgente", "Atenção"
  dataInicio DateTime
  dataFim    DateTime?
  destaque   Boolean   @default(false)
  userId     String // Usuário do condomínio
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user     User           @relation(fields: [userId], references: [id])
  leituras AvisoLeitura[]

  @@map("avisos")
}

model AvisoLeitura {
  id        String   @id @default(cuid())
  userId    String // Usuário que leu
  avisoId   String // Aviso lido
  lido      Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  aviso Aviso @relation(fields: [avisoId], references: [id], onDelete: Cascade)

  @@unique([userId, avisoId])
  @@map("aviso_leitura")
}
