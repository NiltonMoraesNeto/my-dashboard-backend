// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Empresa {
  id                   String    @id @default(cuid())
  nome                 String
  cnpj                 String?   @unique
  razaoSocial          String?
  nomeFantasia         String?
  situacaoCadastral     String?
  dataSituacaoCadastral DateTime?
  matrizFilial         String?
  dataInicioAtividade  DateTime?
  cnaePrincipal        String?
  cnaesSecundarios     String?   // JSON array como string
  naturezaJuridica     String?
  logradouro           String?
  numero               String?
  complemento          String?
  bairro               String?
  cep                  String?
  uf                   String?
  municipio            String?
  email                String?
  telefone             String?
  telefones            String?   // JSON array como string
  capitalSocial        String?
  porteEmpresa         String?
  opcaoSimples         String?
  dataOpcaoSimples     DateTime?
  opcaoMei             String?
  dataOpcaoMei         DateTime?
  qsa                  String?   // JSON array como string
  ativa                Boolean   @default(true)
  dataInicio           DateTime  @default(now())
  dataFim              DateTime?
  observacoes          String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  usuarios               User[]
  unidades               Unidade[]
  contasPagar            ContaPagar[]
  boletos                Boleto[]
  reunioes               Reuniao[]
  avisos                 Aviso[]
  balanceteMovimentacoes BalanceteMovimentacao[]

  @@index([ativa])
  @@map("empresas")
}

model User {
  id           String   @id @default(cuid())
  nome         String
  email        String   @unique
  password     String
  perfilId     Int
  cep          String?
  cpf          String?
  dataNascimento DateTime?
  logradouro   String?
  numero       String?
  complemento  String?
  bairro       String?
  cidade       String?
  uf           String?
  avatar       String?
  resetCode    String?
  condominioId String? // ID do condomínio que criou este morador (null para usuários normais)
  empresaId    String? // ID da empresa (null para SuperAdmin)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  perfil     Profile  @relation(fields: [perfilId], references: [id])
  condominio User?    @relation("CondominioMoradores", fields: [condominioId], references: [id])
  moradores  User[]   @relation("CondominioMoradores")
  empresa    Empresa? @relation(fields: [empresaId], references: [id])

  unidades               Unidade[]
  unidadesComoMorador    Unidade[]               @relation("UnidadeMorador")
  contasPagar            ContaPagar[]
  boletos                Boleto[]
  reunioes               Reuniao[]
  avisos                 Aviso[]
  avisosLidos            AvisoLeitura[]
  balanceteMovimentacoes BalanceteMovimentacao[]

  @@map("usuarios")
}

model Profile {
  id        Int    @id @default(autoincrement())
  descricao String

  users User[]

  @@map("perfil")
}

model SalesData {
  id    String @id @default(cuid())
  name  String
  value Int
  year  Int

  @@map("salesData")
}

model SalesDataByBuilding {
  id           String @id @default(cuid())
  name         String
  value        Int
  buildingName String

  @@map("salesDataByBuilding")
}

model Unidade {
  id           String   @id @default(cuid())
  numero       String
  bloco        String?
  apartamento  String?
  tipo         String? // "Apartamento", "Cobertura", "Loja", etc.
  status       String   @default("Ativo") // "Ativo", "Inativo", "Alugado"
  proprietario String?
  telefone     String?
  email        String?
  userId       String // Usuário do condomínio (dono/gestor)
  moradorId    String? // Usuário morador vinculado ao apto
  empresaId    String? // ID da empresa (para isolamento de dados) - nullable para migração
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id])
  morador     User?        @relation("UnidadeMorador", fields: [moradorId], references: [id])
  empresa     Empresa?     @relation(fields: [empresaId], references: [id])
  boletos     Boleto[]
  contasPagar ContaPagar[]

  @@index([empresaId])
  @@map("unidades")
}

model ContaPagar {
  id          String   @id @default(cuid())
  descricao   String
  valor       Float
  vencimento  DateTime
  mes         Int // 1-12
  ano         Int
  categoria   String? // "Manutenção", "Limpeza", "Segurança", etc.
  status      String   @default("Pendente") // "Pendente", "Paga", "Vencida"
  unidadeId   String?
  userId      String // Usuário do condomínio
  empresaId   String? // ID da empresa (para isolamento de dados) - nullable para migração
  observacoes String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id])
  unidade Unidade? @relation(fields: [unidadeId], references: [id])
  empresa Empresa? @relation(fields: [empresaId], references: [id])

  @@index([empresaId])
  @@map("contasPagar")
}

model Boleto {
  id            String    @id @default(cuid())
  unidadeId     String
  descricao     String
  valor         Float
  vencimento    DateTime
  arquivoPdf    String? // URL do arquivo PDF
  status        String    @default("Pendente") // "Pendente", "Pago", "Vencido", "Cancelado"
  dataPagamento DateTime?
  userId        String // Usuário do condomínio
  empresaId     String? // ID da empresa (para isolamento de dados) - nullable para migração
  observacoes   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user    User     @relation(fields: [userId], references: [id])
  unidade Unidade  @relation(fields: [unidadeId], references: [id])
  empresa Empresa? @relation(fields: [empresaId], references: [id])

  @@index([empresaId])
  @@map("boletos")
}

model Reuniao {
  id        String   @id @default(cuid())
  titulo    String
  data      DateTime
  hora      String
  local     String?
  tipo      String   @default("Assembleia") // "Assembleia", "Reunião Condominial", etc.
  pauta     String?
  status    String   @default("Agendada") // "Agendada", "Realizada", "Cancelada"
  userId    String // Usuário do condomínio
  empresaId String? // ID da empresa (para isolamento de dados) - nullable para migração
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id])
  empresa Empresa? @relation(fields: [empresaId], references: [id])

  @@index([empresaId])
  @@map("reunioes")
}

model Aviso {
  id         String    @id @default(cuid())
  titulo     String
  descricao  String
  tipo       String    @default("Informativo") // "Informativo", "Urgente", "Atenção"
  dataInicio DateTime
  dataFim    DateTime?
  destaque   Boolean   @default(false)
  userId     String // Usuário do condomínio
  empresaId  String? // ID da empresa (para isolamento de dados) - nullable para migração
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user     User           @relation(fields: [userId], references: [id])
  empresa  Empresa?       @relation(fields: [empresaId], references: [id])
  leituras AvisoLeitura[]

  @@index([empresaId])
  @@map("avisos")
}

model AvisoLeitura {
  id        String   @id @default(cuid())
  userId    String // Usuário que leu
  avisoId   String // Aviso lido
  lido      Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  aviso Aviso @relation(fields: [avisoId], references: [id], onDelete: Cascade)

  @@unique([userId, avisoId])
  @@map("aviso_leitura")
}

model BalanceteMovimentacao {
  id        String   @id @default(cuid())
  tipo      String // "Entrada" ou "Saída"
  data      DateTime
  valor     Float
  motivo    String
  userId    String // Usuário do condomínio
  empresaId String? // ID da empresa (para isolamento de dados) - nullable para migração
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id])
  empresa Empresa? @relation(fields: [empresaId], references: [id])

  @@index([empresaId])
  @@map("balancete_movimentacao")
}
